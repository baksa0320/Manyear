<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>PoongSite</display-name>
  <resource-ref>
      <description>connection</description>
      <res-ref-name>jdbc/myoracle</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>
	<servlet>
		<servlet-name>header</servlet-name>
		<jsp-file>/index_header.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>header</servlet-name>
		<url-pattern>/header</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>home</servlet-name>
		<jsp-file>/home.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>index</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/board</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>error</servlet-name>
		<jsp-file>/error.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>id_check_forward</servlet-name>
		<jsp-file>/login/idCheck_forward.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>id_check_forward</servlet-name>
		<url-pattern>/register/idConfirm_forward</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>nick_check_forward</servlet-name>
		<jsp-file>/login/nickCheck_forward.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>nick_check_forward</servlet-name>
		<url-pattern>/register/nickConfirm_forward</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>register</servlet-name>
		<jsp-file>/join.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>registerConfirm</servlet-name>
		<jsp-file>/login/join_process.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>registerConfirm</servlet-name>
		<url-pattern>/register/process</url-pattern>
	</servlet-mapping>
  <error-page>
  	<error-code>404</error-code>
  	<location>/error.jsp</location>
  </error-page>
  <error-page>
  	<error-code>500</error-code>
  	<location>/error.jsp</location>
  </error-page>
</web-app>